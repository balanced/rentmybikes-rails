<div class="row">
    <div class="span7 box">
        <h1>Checkout</h1>
        <div class="span6 offset1">
            <%= form_tag({:controller => 'rentals', :action => 'create', :method => 'post'},{:id => 'purchase'}) do %>
            <p>I already have an account.
                <%= link_to('Sign me in', user_session_path) %>
            </p>
            <fieldset class="control-group">
                <%= label_tag(:"guest-name", 'Name', :class => 'control-label') %>
                <div class="controls">
                    <%= text_field_tag(:"guest-name", nil,  :class => 'span5', :id => 'guest-name', :autofocus => "autofocus") %>
                </div>
            </fieldset>
            <fieldset class="control-group">
                <%= label_tag(:"guest-email_address", 'Email', :class => 'control-label') %>
                <div class="controls">
                    <%= text_field_tag(:"guest-email_address", nil,  :class => 'span5', :id => 'guest-email_address') %>
                </div>
            </fieldset>
            <fieldset class="control-group">
                <%= label_tag(:"guest-card_number", "Credit Card Number") %>
                <div class="controls">
                    <%= text_field_tag(:"guest-card_number", nil,  :class => 'span5', :id => 'guest-card_number') %>
                </div>
            </fieldset>
            <div class="control-group">
                <%= label_tag(:expiration_month, 'Expiration Date') %>
            <%= select_tag(:"guest-expiration_month", options_for_select(1.upto(12).map{ |num| [num,num] }), :class => 'span1', :id => 'guest-expiration_month') %>
            <%= select_tag(:"guest-expiration_year", options_for_select(2012.upto(2022).map{ |num| [num,num] }), :class => 'span1', :id => 'guest-expiration_year') %>
            </div>
            <%= hidden_field_tag(:listing_id, @listing.id) %>
            <div class="actions">
                <%= submit_tag("Rent") %>
            </div>
            <% end %>
            <a href="https://www.balancedpayments.com"><img src="https://balancedpowered.s3.amazonaws.com/secured-1-1.png" alt="Secured by Balanced"></a>
        </div>
    </div>
</div>
